{
  "annotations": {
    "list": []
  },
  "title": "ZGC Detailed Metrics",
  "uid": "zgc-detailed",
  "version": 3,
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "tags": ["gc", "zgc", "jvm"],
  "panels": [
    {
      "title": "GC Pause Time (ms)",
      "description": "Stop-the-world pause duration - ZGC target: <1ms",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "max(jvm_gc_pause_seconds_max{job=\"zgc-app\"}) * 1000",
          "legendFormat": "Max Pause",
          "refId": "A"
        },
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{job=\"zgc-app\"}[1m])) / sum(rate(jvm_gc_pause_seconds_count{job=\"zgc-app\"}[1m])) * 1000",
          "legendFormat": "Avg Pause",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "title": "GC Collection Rate (QPS)",
      "description": "Number of GC collections per second",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_count{job=\"zgc-app\"}[1m]))",
          "legendFormat": "Total Collection Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "GC Collection Count (Total)",
      "description": "Cumulative number of GC collections",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "sum(jvm_gc_pause_seconds_count{job=\"zgc-app\"})",
          "legendFormat": "Total Collections",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5000 },
              { "color": "orange", "value": 20000 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value"
      }
    },
    {
      "title": "ZGC Cycle Duration (ms)",
      "description": "Concurrent GC cycle time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{job=\"zgc-app\"}[1m])) * 1000",
          "legendFormat": "Total GC Time",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Heap Memory Usage (MB)",
      "description": "ZGC heap utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{job=\"zgc-app\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "Heap Used",
          "refId": "A"
        },
        {
          "expr": "max(jvm_memory_committed_bytes{job=\"zgc-app\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "Heap Committed",
          "refId": "B"
        },
        {
          "expr": "max(jvm_memory_max_bytes{job=\"zgc-app\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "Heap Max",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Memory Reclaimed per Cycle",
      "description": "Memory freed by GC",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "targets": [
        {
          "expr": "sum(jvm_gc_live_data_size_bytes{job=\"zgc-app\"}) / 1024 / 1024",
          "legendFormat": "Live Data Size",
          "refId": "A"
        },
        {
          "expr": "sum(jvm_gc_max_data_size_bytes{job=\"zgc-app\"}) / 1024 / 1024",
          "legendFormat": "Max Data Size",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "ZGC Cycles by Reason",
      "description": "What triggers GC - Minor vs Major cycles",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum(increase(jvm_gc_pause_seconds_count{job=\"zgc-app\", cause=\"Allocation Rate\"}[1m]))",
          "legendFormat": "Allocation Rate",
          "refId": "A"
        },
        {
          "expr": "sum(increase(jvm_gc_pause_seconds_count{job=\"zgc-app\", cause=\"Warmup\"}[1m]))",
          "legendFormat": "Warmup",
          "refId": "B"
        },
        {
          "expr": "sum(increase(jvm_gc_pause_seconds_count{job=\"zgc-app\", cause=\"Proactive\"}[1m]))",
          "legendFormat": "Proactive",
          "refId": "C"
        },
        {
          "expr": "sum(increase(jvm_gc_pause_seconds_count{job=\"zgc-app\", cause=\"Allocation Stall\"}[1m]))",
          "legendFormat": "Allocation Stall",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 50,
            "stacking": { "mode": "normal" }
          }
        }
      }
    },
    {
      "title": "ZGC Cycles by Type (Count)",
      "description": "Minor vs Major cycle counts",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "sum(jvm_gc_pause_seconds_count{job=\"zgc-app\", action=\"end of minor GC\"})",
          "legendFormat": "Minor GC",
          "refId": "A"
        },
        {
          "expr": "sum(jvm_gc_pause_seconds_count{job=\"zgc-app\", action=\"end of major GC\"})",
          "legendFormat": "Major GC",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "pieType": "pie",
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        }
      }
    },
    {
      "title": "Allocation Rate (MB/s)",
      "description": "Memory allocation throughput",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_memory_allocated_bytes_total{job=\"zgc-app\"}[1m])) / 1024 / 1024",
          "legendFormat": "Allocation Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MBs",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Process CPU Usage",
      "description": "ZGC CPU overhead",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 24 },
      "targets": [
        {
          "expr": "avg(process_cpu_usage{job=\"zgc-app\"})",
          "legendFormat": "Process CPU",
          "refId": "A"
        },
        {
          "expr": "avg(system_cpu_usage{job=\"zgc-app\"})",
          "legendFormat": "System CPU",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "GC Overhead (%)",
      "description": "Time spent in GC - ZGC should be very low",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 24 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{job=\"zgc-app\"}[1m]))",
          "legendFormat": "GC Overhead",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 0.1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "title": "HTTP Request Latency (ms)",
      "description": "API response time percentiles",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"zgc-app\", uri=~\"/api/memory/.*\"}[1m]))) * 1000",
          "legendFormat": "P99",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"zgc-app\", uri=~\"/api/memory/.*\"}[1m]))) * 1000",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"zgc-app\", uri=~\"/api/memory/.*\"}[1m]))) * 1000",
          "legendFormat": "P50",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "ZGC Summary Stats",
      "description": "Key metrics at a glance",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
      "targets": [
        {
          "expr": "max(jvm_gc_pause_seconds_max{job=\"zgc-app\"}) * 1000",
          "legendFormat": "Max Pause (ms)",
          "refId": "A"
        },
        {
          "expr": "sum(jvm_gc_pause_seconds_count{job=\"zgc-app\"})",
          "legendFormat": "Total Cycles",
          "refId": "B"
        },
        {
          "expr": "sum(jvm_memory_used_bytes{job=\"zgc-app\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "Heap Used (MB)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto"
      }
    }
  ]
}
