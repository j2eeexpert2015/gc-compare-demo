{
  "annotations": {
    "list": []
  },
  "title": "G1GC vs ZGC Comparison",
  "uid": "gc-compare-dashboard",
  "version": 1,
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "title": "GC Pause Time (Max) - Lower is Better",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "jvm_gc_pause_seconds_max{job=~\"g1gc-app|zgc-app\"}",
          "legendFormat": "{{job}} - {{action}} {{cause}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "GC Pause Count (Total)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "increase(jvm_gc_pause_seconds_count{job=~\"g1gc-app|zgc-app\"}[1m])",
          "legendFormat": "{{job}} - {{action}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2
          }
        }
      }
    },
    {
      "title": "Heap Memory Used",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{job=~\"g1gc-app|zgc-app\", area=\"heap\"}",
          "legendFormat": "{{job}} - Used",
          "refId": "A"
        },
        {
          "expr": "jvm_memory_max_bytes{job=~\"g1gc-app|zgc-app\", area=\"heap\"}",
          "legendFormat": "{{job}} - Max",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Process CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "process_cpu_usage{job=~\"g1gc-app|zgc-app\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "GC Overhead (Time spent in GC)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{job=~\"g1gc-app|zgc-app\"}[1m])",
          "legendFormat": "{{job}} - {{action}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "HTTP Request Latency (P99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(http_server_requests_seconds_bucket{job=~\"g1gc-app|zgc-app\", uri=~\"/api/memory/.*\"}[1m]))",
          "legendFormat": "{{job}} - {{uri}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2
          }
        }
      }
    },
    {
      "title": "Allocation Rate (Memory Allocated)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "rate(jvm_gc_memory_allocated_bytes_total{job=~\"g1gc-app|zgc-app\"}[1m])",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "System CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "system_cpu_usage{job=~\"g1gc-app|zgc-app\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "GC Stats Summary",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "jvm_gc_pause_seconds_count{job=~\"g1gc-app|zgc-app\"}",
          "legendFormat": "{{job}} - {{action}} count",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value",
        "graphMode": "area"
      }
    }
  ]
}
