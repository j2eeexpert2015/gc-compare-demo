{
  "annotations": {
    "list": []
  },
  "title": "G1GC Detailed Metrics",
  "uid": "g1gc-detailed",
  "version": 3,
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "tags": ["gc", "g1gc", "jvm"],
  "panels": [
    {
      "title": "GC Pause Time (ms)",
      "description": "Stop-the-world pause duration - lower is better",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "max(jvm_gc_pause_seconds_max{job=\"g1gc-app\"}) * 1000",
          "legendFormat": "Max Pause",
          "refId": "A"
        },
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{job=\"g1gc-app\"}[1m])) / sum(rate(jvm_gc_pause_seconds_count{job=\"g1gc-app\"}[1m])) * 1000",
          "legendFormat": "Avg Pause",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          }
        }
      }
    },
    {
      "title": "GC Pause Rate (QPS)",
      "description": "Number of GC pauses per second",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_count{job=\"g1gc-app\"}[1m]))",
          "legendFormat": "Total Pause Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "GC Pause Count (Total)",
      "description": "Cumulative number of GC pauses",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "sum(jvm_gc_pause_seconds_count{job=\"g1gc-app\"})",
          "legendFormat": "Total Pauses",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1000 },
              { "color": "red", "value": 10000 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value"
      }
    },
    {
      "title": "GC Cycle Duration (ms)",
      "description": "Time spent in GC per cycle type",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{job=\"g1gc-app\"}[1m])) * 1000",
          "legendFormat": "Total GC Time",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Heap Memory Usage (MB)",
      "description": "Heap memory utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{job=\"g1gc-app\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "Heap Used",
          "refId": "A"
        },
        {
          "expr": "max(jvm_memory_committed_bytes{job=\"g1gc-app\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "Heap Committed",
          "refId": "B"
        },
        {
          "expr": "max(jvm_memory_max_bytes{job=\"g1gc-app\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "Heap Max",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Memory Pool Usage (MB)",
      "description": "G1 memory pool breakdown",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{job=\"g1gc-app\", id=~\".*Eden.*\"}) / 1024 / 1024",
          "legendFormat": "Eden Space",
          "refId": "A"
        },
        {
          "expr": "sum(jvm_memory_used_bytes{job=\"g1gc-app\", id=~\".*Old.*\"}) / 1024 / 1024",
          "legendFormat": "Old Gen",
          "refId": "B"
        },
        {
          "expr": "sum(jvm_memory_used_bytes{job=\"g1gc-app\", id=~\".*Survivor.*\"}) / 1024 / 1024",
          "legendFormat": "Survivor Space",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "stacking": { "mode": "normal" }
          }
        }
      }
    },
    {
      "title": "GC Overhead (%)",
      "description": "Percentage of time spent in GC",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{job=\"g1gc-app\"}[1m]))",
          "legendFormat": "GC Overhead",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.05 },
              { "color": "red", "value": 0.15 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        }
      }
    },
    {
      "title": "Allocation Rate (MB/s)",
      "description": "Memory allocation throughput",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_memory_allocated_bytes_total{job=\"g1gc-app\"}[1m])) / 1024 / 1024",
          "legendFormat": "Allocation Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MBs",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Promotion Rate (MB/s)",
      "description": "Objects promoted to old generation",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_memory_promoted_bytes_total{job=\"g1gc-app\"}[1m])) / 1024 / 1024",
          "legendFormat": "Promotion Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MBs",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Process CPU Usage",
      "description": "JVM process CPU utilization",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "avg(process_cpu_usage{job=\"g1gc-app\"})",
          "legendFormat": "Process CPU",
          "refId": "A"
        },
        {
          "expr": "avg(system_cpu_usage{job=\"g1gc-app\"})",
          "legendFormat": "System CPU",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "HTTP Request Latency (ms)",
      "description": "API response time percentiles",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 24 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"g1gc-app\", uri=~\"/api/memory/.*\"}[1m]))) * 1000",
          "legendFormat": "P99",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"g1gc-app\", uri=~\"/api/memory/.*\"}[1m]))) * 1000",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"g1gc-app\", uri=~\"/api/memory/.*\"}[1m]))) * 1000",
          "legendFormat": "P50",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "GC Events by Cause",
      "description": "Breakdown of GC triggers",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 24 },
      "targets": [
        {
          "expr": "sum(increase(jvm_gc_pause_seconds_count{job=\"g1gc-app\", cause=\"G1 Evacuation Pause\"}[1m]))",
          "legendFormat": "G1 Evacuation Pause",
          "refId": "A"
        },
        {
          "expr": "sum(increase(jvm_gc_pause_seconds_count{job=\"g1gc-app\", cause=\"Metadata GC Threshold\"}[1m]))",
          "legendFormat": "Metadata GC Threshold",
          "refId": "B"
        },
        {
          "expr": "sum(increase(jvm_gc_pause_seconds_count{job=\"g1gc-app\", cause=\"G1 Humongous Allocation\"}[1m]))",
          "legendFormat": "Humongous Allocation",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 50,
            "stacking": { "mode": "normal" }
          }
        }
      }
    },
    {
      "title": "Live Threads",
      "description": "JVM thread count",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "sum(jvm_threads_live_threads{job=\"g1gc-app\"})",
          "legendFormat": "Live Threads",
          "refId": "A"
        },
        {
          "expr": "sum(jvm_threads_daemon_threads{job=\"g1gc-app\"})",
          "legendFormat": "Daemon Threads",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "G1GC Summary Stats",
      "description": "Key metrics at a glance",
      "type": "stat",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 32 },
      "targets": [
        {
          "expr": "max(jvm_gc_pause_seconds_max{job=\"g1gc-app\"}) * 1000",
          "legendFormat": "Max Pause (ms)",
          "refId": "A"
        },
        {
          "expr": "sum(jvm_gc_pause_seconds_count{job=\"g1gc-app\"})",
          "legendFormat": "Total Pauses",
          "refId": "B"
        },
        {
          "expr": "sum(jvm_memory_used_bytes{job=\"g1gc-app\", area=\"heap\"}) / 1024 / 1024",
          "legendFormat": "Heap Used (MB)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        },
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "auto"
      }
    }
  ]
}
